{
  "name": "@peter.naydenov/notice",
  "description": "Event emmiter - NOTICE",
  "version": "2.4.0",
  "license": "MIT",
  "author": "Peter Naydenov",
  "main": "./src/main.js",
  "type": "module",
  "types": "./types/main.d.ts",
  "exports": {
    ".": {
      "import": "./src/main.js",
      "require": "./dist/notice.cjs",
      "default": "./src/main.js"
    },
    "./package.json": "./package.json",
    "./dist/*": "./dist/*",
    "./src/*": "./src/*"
  },
  "scripts": {
    "test": "mocha test",
    "cover": "c8 mocha",
    "build": "rollup -c",
    "postbuild": "tsc -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PeterNaydenov/notice"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "c8": "^10.1.3",
    "chai": "5.2.0",
    "mocha": "11.1.0",
    "rollup": "^4.38.0",
    "typescript": "^5.8.2"
  },
  "c8": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "node_modules",
      "test"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "keywords": [
    "events",
    "emitter",
    "publisher",
    "subscriber",
    "pubsub"
  ]
}
