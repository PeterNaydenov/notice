{
  "name": "@peter.naydenov/notice",
  "description": "Event emmiter - NOTICE",
  "version": "2.2.3",
  "license": "MIT",
  "author": "Peter Naydenov",
  "main": "./dist/notice.umd.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/notice.esm.mjs",
      "require": "./dist/notice.cjs",
      "default": "./dist/notice.umd.js"
    },
    "./package.json": "./package.json",
    "./dist/*": "./dist/*",
    "./src/*": "./src/*"
  },
  "scripts": {
    "test": "mocha test",
    "cover": "c8 mocha",
    "build": "rollup -c"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PeterNaydenov/notice"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "c8": "^9.1.0",
    "chai": "5.1.0",
    "mocha": "10.3.0",
    "rollup": "^4.12.0"
  },
  "c8": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "node_modules",
      "test"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "keywords": [
    "events",
    "emitter",
    "publisher",
    "subscriber",
    "pubsub"
  ]
}
